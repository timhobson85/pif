<h2>offer a task</h2>
<%= form_for @thing, :html => {:multipart => true}  do |f| %>

<%# act = 1 ('offer'), thing_type = 1 ('task') %>
<%= f.hidden_field :act, :value => 'offer' %>
<%= f.hidden_field :things_type, :value => 'task' %>


<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :location %>
<%= f.text_field :location, value: "#{@current_user.location}" %>

<%= f.label :image %>
<%= f.cl_image_upload :image %>

<br>
<%= f.submit %>
<% end %>
