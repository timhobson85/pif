<h2>login</h2>

<!-- Print out any message for the user if one exists-->
<% if flash[:error] %>
  <strong>
    <%= flash[:error] %>
  </strong>
  <br>
<% end %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login' %>

<% end %>
