<%= form_for @thing, :html => {:multipart => true} do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>


<%= f.label :act %>
<%= f.select :act, Thing.acts.keys %>

<%= f.label :condition %>
<%= f.select :condition, Thing.conditions.keys %>

