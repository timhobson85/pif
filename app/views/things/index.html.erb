<h2>current listings</h2>

<h3>people in need</h3>
<h4>tasks</h4>
<ul>
  <% @things.each do |t| %>
    <% if t.user != @current_user && t.act == 'need' && t.thing_type == 'task'%>
    <li>
      <%= link_to "#{t.name} - #{t.user.name}", thing_path(t.id) %>
    </li>
    <% end %>
  <% end %>
</ul>
