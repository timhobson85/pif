<%= form_for @thing do |f| %>

<%# act = 1 ('offer'), thing_type = 0 ('item') %>
<%= f.hidden_field :act, :value => 'offer' %>
<%= f.hidden_field :things_type, :value => 'need' %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<%= f.label :condition %>
<%= f.select :condition, Thing.conditions.keys %>
<br>
<%= f.label :location %>
<%= f.text_field :location, value: "#{@current_user.location}" %>
<br>
<%= f.label :image %>
<%= f.text_field :image %>
<br>
<%= f.submit %>
<% end %>
