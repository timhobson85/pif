<div id="accountPage"><div id="accountProfilePicture"><%= cl_image_tag(@current_user.image) %></div>
<div id="accountInformation">
<% if @user.id == @current_user.id %>

<ul>
  <li>You have <%= @user.things.count %> listings </li>
  <li><%= @user.things.where(act:'need').count %> - Needs </li>
  <li><%= @user.things.where(act:'offer').count %> - Offers </li>
</ul>
<div id="accountButtons"><%= link_to user_path( @current_user.id ), method: 'delete' do %>
  <div id="divButton">delete account</div>
<% end %>
<%= link_to edit_user_path( @current_user.id ) do %>
<div id="divButton">edit account</div>
<% end %></div>
<% else %>
<ul>
  <li><%= @user.name %></li>
  <li><%= @user.location %></li>
  <li><%= @user.bio %></li>
</ul>
<% end %>
</div>
</div>
