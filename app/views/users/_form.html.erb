<%= form_for @user do |f| %>

<% if @user.errors.any? %>
<p> you have encountered an issue: </p>
<ul>
  <% @user.errors.full_messages.each do |e| %>
  <li>
    <%= e %>
  </li>
  <% end %>
</ul>
<% end %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :email %>
<%= f.email_field :email %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.label :password_confirmation, :value => "confirm password" %>
<%= f.password_field :password_confirmation %>
<br>
<%= f.submit %>
<% end %>
